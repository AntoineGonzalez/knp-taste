<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}
                KNP taste         
            {% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header style="width:90%; margin:auto;display:flex; justify-content: space-between;">
                {% block header %}
                <div>
                    {% if app.user %}
                        Connecté en tant que : {{ app.user.username }}
                    {% endif %}
                </div>
                <nav>
                    <ol>
                        {% if app.user %}
                            <li><a href="/logout">Déconnexion</a></li>
                        {% else %}
                            <li><a href="/login">Connexion</a></li>
                            <li><a href="/register">Inscrition</a></li>
                        {% endif %}
                    </ol>
                </nav>
                {% endblock %}
            </header>
            <main style="width:75%; margin:auto">
                {% block main %}{% endblock %}
            </main>
        {% endblock %}
    </body>
</html>
